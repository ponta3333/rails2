<div class="body">
	<% if flash[:notice] %>
	<div>
		<%= flash[:notice] %>
	</div>
	<% end %>
	<div class="container">
		<%= render 'users/info', user: @user, book: @book %>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(@book2.user) do %>
								<%= attachment_image_tag @book2.user, :profile_image, format: 'jpeg', size: "45x45", fallback: "no_image.jpg" %>
								<br>
								<%= @book2.user.name %>
								<% end %>
							</td>
							<td><%= link_to "#{@book2.title}", book_path(@book2) %></td>
							<td><%= @book2.body %></td>
							<td>
								<%= render 'favorites/favorite', user: @user, book: @book2 %>
							</td>
							<td>
								<i class="fa fa-comment"></i>
								<%= @book2.book_comments.count %>
							</td>
							<% if @book2.user == current_user %>
							<td><%= link_to "Edit", edit_book_path(@book2), class:"btn btn-success" %></td>
							<td><%= link_to "Destroy", book_path(@book2), method: :delete, class:"btn btn-danger", "data-confirm" => "Are you sure?" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="col-xs-9">
				<table>
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<tbody>
						<% @book2.book_comments.each do |book_comment| %>
						<tr>
							<td>
								<%= link_to user_path(@book2.user) do %>
								<%= attachment_image_tag @book2.user, :profile_image, format: 'jpeg', size: "45x45", fallback: "no_image.jpg" %>
								<br>
								<%= @book2.user.name %>
								<% end %>
							</td>
							<td><%= book_comment.comment %></td>
							<td>
								<% if book_comment.user_id == current_user.id %>
								<%= link_to "Destroy", book_book_comment_path(@book2, @user), method: :delete, class:"btn btn-danger" %>
								<% end %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
				<%= form_for [@book2, @book_comment] do |f| %>
      			<%= f.text_area :comment, rows:'5', class: "form-control", placeholder: "コメントをここに" %>
  				<span><%= f.submit "送信", class: "btn btn-default pull-right" %></span>
			<% end %>
			</div>
	</div>
</div>